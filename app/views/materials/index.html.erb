<div class="container">
  <div class="h-screen w-full flex overflow-hidden select-none">
    <main class="my-1 pt-2 pb-2 px-10 flex-1 bg-gray-200 dark:bg-black rounded-l-lg
        transition duration-500 ease-in-out overflow-y-auto">

      <p id="notice"><%= notice %></p>

    <h1>Matieres</h1>

    <table>
      <thead>
        <tr>
          <th>Titre</th>
          <th>Adresse</th>
          <th>Auteur</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @materials.each do |material| %>
          <tr>
            <td><%= material.title %></td>
            <td><%= material.slug %></td>
            <td><%= material.user_id %></td>
            <td><%= link_to 'Affiche', material %></td>
            <td><%= link_to 'Editer', edit_material_path(material) %></td>
            <td><%= link_to 'Supprimer', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nouvelle matiere', new_material_path, class:"font-bold inline-flex justify-center py-2 px-4 border border-transparent 
      shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600
    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
      focus:ring-indigo-500" %>
    </main>
  </div>
</div>
