<!--Toast-->
<% flash.each do |key, value| %>
   
<% end %>

<% unless flash.empty? %>
   <div class=" fixed bottom-0 right-0 m-8 w-5/6 md:w-full max-w-sm">
    <script type="text/javascript">
      <% flash.each do |f| %>
          <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
          toastr['<%= type %>']('<%= f[1] %>', '', {
            "closeButton": true,
            "positionClass": "toast-top-center", 
            "onclick": null, 
            "showDuration": "300", 
            "hideDuration": "1000", 
            "timeOut": "5000", 
            "extendedTimeOut": "1000", 
            "showEasing": "swing", 
            "hideEasing": "linear", 
            "showMethod": "fadeIn", 
            "progressBar": true,
            "hideMethod": "fadeOut" });
      <% end %>
    </script>
  </div>
<% end %>