
<%= content_for @title=" Inscription Eleves" %>
<div class="container" id="wrap">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <span class="items-center">
                <legend>Inscription</legend>
                <h4 class="font-semibold mb-2">Inscrivez-vous gratuitement, C'est simple, remplissez seulement les champs.</h4>
            </span>

            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="row">
                    <!-- User first and last name-->
                    <div class="col-xs-6 col-md-6 my-1">
                        <%= f.text_field :first_name, hide_label: true, class:"border border-gray-800 input-lg",
                                placeholder:"Ton nom :", autofocus: true %>
                    </div>
                    <div class="col-xs-6 col-md-6 my-1">
                        <%= f.text_field :last_name, hide_label: true, class:"form-control input-lg",
                        placeholder:"Ton prénom :" %>
                    </div>
                </div>

                 <!-- user email-->
                <%= f.email_field :email, id:"studentEmail", hide_label: true, 
                    class:"form-control input-lg ",placeholder:"Ton adresse email:" %>

                <!-- Matricule-->
                <%= f.text_field :matricule, hide_label: true, class:"form-control input-lg my-2",
                placeholder:"Ton matricule national :" %>

                <!-- city-->
                <div class="options md:flex text-sm items-center text-gray-700 mb-2 ">    
                    <%= f.select :city, User::CITY_NAME, label: "Ville:", label_class:"font-semibold",
                    wrapper: {class:"md:w-1/2 border border-gray-200 focus:outline-none focus:border-gray-500"}, help:"choisie la ville de frequentation" %>
                    
                    <!-- school name
                    <%= f.select :school_name, User::SCHOOL_NAME, label: "Ecole: ", label_class:"font-semibold",
                    wrapper: { class: "md:w-1/3 border border-gray-200 focus:outline-none 
                    focus:border-gray-500"} %>      
                    -->
            
                    <%= f.select :level_id, @levels.map { |l| [l.title, l.id] }, label: "Niveau: ", label_class:"font-semibold",
                    wrapper: {class:"md:w-1/2 border border-gray-200 focus:outline-none focus:border-gray-500"}, help:"Choisi le Bac que tu fais" %>
                </div>
            
                <!-- phone contact-->
                <%= f.phone_field :phone_contact, class:"form-control  input-lg ",
                    placeholder:"N° téléphone :", hide_label: true %>
                    <small class="bg-red-400">Numéro de téléphone Ivoirien de 10 chiffres.</small>
                
                <!-- phone contact-->
                <%= f.phone_field :whatsapp_contact, class:"form-control  input-lg my-1 ",
                    placeholder:"N° téléphone WhatsApp :", hide_label: true %>
                    <small class="bg-red-400">Ajouter votre numéro whatsapp, pas Obligatoire!</small>
                <!-- Referral code
                 <%= f.text_field :referral, class:'w-full h-12 border border-gray-800 rounded px-3',
                    hide_label: true, placeholder:"Entrez le code de parrainage",
                     help:"laisser le champs vide, si vous n'avez pas reçu de code parrainage" %>
                -->

                <div class="py-2" x-data="{ show: true }">
                
                <div class="relative">
                  <input type="password" name="user[password]" id="user_password" placeholder="Mot de passe" :type="show ? 'password' : 'text'" class="text-md block px-3 py-2 rounded-lg w-full 
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md
                focus:placeholder-gray-500
                focus:bg-white 
                focus:border-gray-600  
                focus:outline-none">
                <small class="bg-red-400">votre mot de passe doit etre de 8 caractères ou plus</small>
                  <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">

                    <svg class="h-6 text-gray-700" fill="none" @click="show = !show"
                      :class="{'hidden': !show, 'block':show }" xmlns="http://www.w3.org/2000/svg"
                      viewbox="0 0 576 512">
                      <path fill="currentColor"
                        d="M572.52 241.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 0 0 0 0-29.19zM288 400a144 144 0 1 1 144-144 143.93 143.93 0 0 1-144 144zm0-240a95.31 95.31 0 0 0-25.31 3.79 47.85 47.85 0 0 1-66.9 66.9A95.78 95.78 0 1 0 288 160z">
                      </path>
                    </svg>

                    <svg class="h-6 text-gray-700" fill="none" @click="show = !show"
                      :class="{'block': !show, 'hidden':show }" xmlns="http://www.w3.org/2000/svg"
                      viewbox="0 0 640 512">
                      <path fill="currentColor"
                        d="M320 400c-75.85 0-137.25-58.71-142.9-133.11L72.2 185.82c-13.79 17.3-26.48 35.59-36.72 55.59a32.35 32.35 0 0 0 0 29.19C89.71 376.41 197.07 448 320 448c26.91 0 52.87-4 77.89-10.46L346 397.39a144.13 144.13 0 0 1-26 2.61zm313.82 58.1l-110.55-85.44a331.25 331.25 0 0 0 81.25-102.07 32.35 32.35 0 0 0 0-29.19C550.29 135.59 442.93 64 320 64a308.15 308.15 0 0 0-147.32 37.7L45.46 3.37A16 16 0 0 0 23 6.18L3.37 31.45A16 16 0 0 0 6.18 53.9l588.36 454.73a16 16 0 0 0 22.46-2.81l19.64-25.27a16 16 0 0 0-2.82-22.45zm-183.72-142l-39.3-30.38A94.75 94.75 0 0 0 416 256a94.76 94.76 0 0 0-121.31-92.21A47.65 47.65 0 0 1 304 192a46.64 46.64 0 0 1-1.54 10l-73.61-56.89A142.31 142.31 0 0 1 320 112a143.92 143.92 0 0 1 144 144c0 21.63-5.29 41.79-13.9 60.11z">
                      </path>
                    </svg>

                  </div>
                  
                </div>
              </div>          
               
              <%= f.hidden_field :role, value:"Student" %>

               <small>Cliquez sur créé mon compte, votre compte sera créé et vous pouvez réviser  gratuitement jusqu'a la semaine prochaine.</small>
                <div class="actions mt-2">
                    <%= f.submit "Je crée mon compte", class:"btn btn-lg btn-primary btn-block signup-btn" %>
                </div>
            <% end %>

        </div>
    </div>
</div>
