<!-- Home feed -onglet Msg -->
<% content_for @title= "Connectez-vous - Plateforme de préparation du BAC" %>

<!-- component -->
<div class="h-screen bg-gray-200 flex flex-col space-y-10 justify-center items-center">
  <div class="bg-white w-96 shadow-xl rounded p-5">
    <h1 class="text-3xl font-medium items-center">Lnclass</h1>
    <p class="text-sm">Connectez-vous à la plateforme</p>
    
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div  class="space-y-5 mt-5">
      <!-- login-->
      <%= f.text_field :login, class:"w-full h-12 border border-gray-800 rounded px-3", placeholder:"Email ou N° téléphone", hide_label: true %>
      
      <!-- Pwd-->
      <div class="w-full flex items-center border border-gray-800 rounded px-3">
        <%= f.password_field :password, class:"w-4/5 h-12", placeholder:"Mot de passe" %>
        <span class="text-blue-700 hover:bg-blue-400 rounded-md px-3">Voir</span>
      </div>
      <!-- Pwd forget -->
      <div class="">
        <a href="#!" class="font-medium text-blue-400 hover:bg-blue-300 rounded-md p-2">Mot de passe oublié?</a>
      </div>
      <!-- button submit-->
    <%= f.submit "Connecter", class:"text-center w-full bg-blue-400 rounded-md text-white font-bold py-3 font-medium" %>
    </div>
    <% end %>
  </div>
</div>