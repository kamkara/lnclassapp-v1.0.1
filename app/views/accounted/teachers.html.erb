<%= content_for @title=" Inscription Professeur" %>

<div class="container" id="wrap">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <span class="items-center">
                <legend>Inscription</legend>
                <h4 class="font-semibold mb-2">Inscrivez-vous gratuitement, C'est simple.</h4>
            </span>

            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="row mb-2">
                    <!-- User first and last name-->
                    <div class="col-xs-6 col-md-6 my-1">
                        <%= f.text_field :first_name,
                        hide_label: true, class:"form-control input-lg",
                        placeholder:"Nom :", autofocus: true %>
                    </div>
                    <div class="col-xs-6 col-md-6 my-1">
                        <%= f.text_field :last_name,
                        hide_label: true, class:"form-control  input-lg",
                        placeholder:"Prénom :" %>
                    </div>
                </div>
                <!-- city-->
                <div class="options md:flex text-sm items-center text-gray-700 mb-2">    
                    <%= f.select :city, User::CITY_NAME, label: "Ville:",label_class:"font-semibold",
                    wrapper: {class:"md:w-1/3 border border-gray-200 focus:outline-none focus:border-gray-500"} %>
            
                    <!-- school name-->
                    <%= f.select :school_name, User::SCHOOL_NAME, label: "Ecole: ", label_class:"font-semibold",
                    wrapper: { class: "md:w-1/3 border border-gray-200 focus:outline-none 
                    focus:border-gray-500"} %>      
            
                    <%= f.select :material_id, @materials.map { |m| [m.title, m.id] }, label: "Discipline: ", label_class:"font-semibold",
                    wrapper: {class:"md:w-1/3 border border-gray-200 focus:outline-none focus:border-gray-500"} %>
                </div>
                
               
            
                <!-- phone contact-->
                <%= f.phone_field :phone_contact, class:"form-control  input-lg ",
                    placeholder:"N° téléphone :", hide_label: true, id:"studentContact",
                    help:"Numéro de téléphone Ivoirien à 10 chiffres."  %>

                <!-- phone contact-->
                <%= f.phone_field :whatsapp_contact, class:"form-control  input-lg my-1 ",
                placeholder:"N° téléphone WhatsApp :", hide_label: true , 
                help:"Ajouter votre numéro whatsapp, pas Obligatoire!" %>

                <!-- user email-->
                <%= f.email_field :email, id:"studentEmail", hide_label: true, 
                class:"form-control input-lg  mb-2",placeholder:"Adresse email:" %>
                
                <!-- role-->
                <%= f.hidden_field :role, value:"Teacher" %>
                <%= f.text_field :referral, class:'w-full h-12 border border-gray-800 rounded px-3',
                    hide_label: true, placeholder:"Entrez le code de parrainage",
                     help:"laisser le champs vide, si vous n'avez pas reçu de code parrainage du city manager" %>
                    <!-- password section-->
                <%= f.password_field :password, hide_label: true, class:"form-control  input-lg ", 
                help:"Un bon mot de passe doit avoir plus de 8 caractères",
                placeholder:"Mot de passe :" %>

                <!-- Passwword confirm -->
                <%= f.password_field :password_confirmation, 
                hide_label: true, class:"form-control md:input-lg lg:input-lg my-1 ",
                placeholder:"Confirmez votre mot de passe :", 
                help:"retaper le mot de passe" %>
                
                <!-- Passwword confirm -->
                <div class="actions mt-2">
                    <%= f.submit "Créer mon compte", class:"btn btn-lg btn-primary btn-block signup-btn" %>
                </div>
            <% end %>

        </div>
    </div>
</div>
