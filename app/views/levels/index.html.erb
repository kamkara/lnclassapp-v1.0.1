<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Levels</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @levels.each do |level| %>
        <tr>
          <td><%= level.title %></td>
          <td><%= level.slug %></td>
          <td><%= level.user_id %></td>
          <td><%= link_to 'Show', level %></td>
          <td><%= link_to 'Edit', edit_level_path(level) %></td>
          <td><%= link_to 'Destroy', level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Ajoute Niveau', new_level_path,
  class:"inline-flex justify-center py-2 px-4 border border-transparent 
    shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600
  hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2
    focus:ring-indigo-500" %>
</div>